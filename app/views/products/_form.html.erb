<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: 6 %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :room_for_furniture %><br>
    <%= f.text_field :room_for_furniture %>
  </div>
  <div class="field">
    <%= f.label :furniture_type %><br>
    <%= f.text_field :furniture_type %>
  </div>
  <div class="field">
    <%= f.label :furniture_wood %><br>
    <%= f.select :furniture_wood, FurnitureWood.woodtypes,
                  :prompt => 'Select a wood type'%>
  </div>
  <div class="field">
    <%= f.label :furniture_stain %><br>
    <%= f.text_field :furniture_stain %>
  </div>
  <div class="field">
    <%= f.label :furniture_dimensions %><br>
    <%= f.text_field :furniture_dimensions %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
